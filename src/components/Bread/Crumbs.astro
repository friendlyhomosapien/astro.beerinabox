---
export interface Props {
    crumbs: {
        path: string;
        label: string;
    }[]
}

const { crumbs } = Astro.props as Props;
---

<div class="text-sm breadcrumbs">
    <ul>
        <li>
            <a href="/">Home</a>
        </li>
        {
            crumbs.map((crumb) => (
                <li>
                    <a href={crumb.path}>{crumb.label}</a>
                </li>
            ))
        }
    </ul>
</div>
