---
import '@/styles/app.css';
import BreadCrumbs from '@/components/Bread/Crumbs.astro';

export interface Props {
    title?: string | 'beer in a box';
    breadcrumbs?: {
        path: string;
        label: string;
    }[]
}

const { title, breadcrumbs } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description">
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <header class="bg-base-300">
            <div class="container mx-auto navbar">
                <a class="btn btn-ghost normal-case text-xl">
                    ğŸºğŸºğŸº beer-in-a-box ğŸºğŸºğŸº
                </a>
            </div>
        </header>

        <nav>
            { breadcrumbs?.length && <BreadCrumbs crumbs={breadcrumbs} /> }
        </nav>

        <main>
            <slot />
        </main>
    </body>
</html>

<style is:global>

html {
    @apply bg-base-300;
}

body {
    @apply bg-neutral min-h-screen;
}

body > nav {
    @apply container mx-auto;
}

body > main {
    @apply container mx-auto mt-12;
}
</style>
